<!DOCTYPE html>
<html>
<head>
	<% include partials/head.ejs %>
</head>
<body>
<% include partials/header.ejs %>
<div id="hero-image">
	<h1 id="hero-title"><%= title %></h1>
</div>

<div id="posters-wrapper" class="content-padding clearfix">
	<% for(var i = 0; i < movies.length; i++){ %>
		<div class="poster">

			<% // On every image there's a link that takes the visitor to the single episode route "/episode"  %>
			<a href="/episode/<%= i + 1 %>"><img src="/images/<%= movies[i].poster %>" class="img-responsive" /></a>
			<div class="poster-info-overlay">
				<h3><%= movies[i].title %></h3>
				<h4><a href="/episode/<%= i + 1 %>">View More<i class="fa fa-arrow-right"></i></a></h4>
			</div>

		</div>
	<% } %>
</div>



